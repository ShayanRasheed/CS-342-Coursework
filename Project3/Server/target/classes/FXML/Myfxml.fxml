<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="vbox" fx:controller = "MyController"
	  fx:id = "root" alignment="CENTER" spacing="50">

	<Text text="The Ancient Game of Morra"/>
	<Text text="Enter a port:"/>
    <TextField fx:id = "port" promptText="Enter a port to connect to..."/>
	<Button fx:id = "start" text = "Start the Server!" onAction="#createServer"/>
	
</VBox>

